# The loopback network interface
 auto lo
 iface lo inet loopback
   address 10.0.0.41/32
   clagd-vxlan-anycast-ip 10.0.0.142

 # The primary network interface
 auto eth0
 iface eth0 inet dhcp
    vrf mgmt


auto mgmt
iface mgmt
    address 127.0.0.1/8
    vrf-table auto

auto swp44
iface swp44

auto swp49
iface swp49

auto swp50
iface swp50

auto swp51
iface swp51

auto swp52
iface swp52

auto peerlink
iface peerlink
  mtu 9000
  bond-slaves swp49 swp50


#LAG Peerlink L2 interface.
# This creates VLAN 4094 that only lives on the peerlink bond
# No other interface will be aware of VLAN 4094
auto peerlink.4094
iface peerlink.4094
  address 169.254.1.1/30
  clagd-peer-ip 169.254.1.2
  clagd-backup-ip 10.0.0.42
  clagd-sys-mac 44:39:39:ff:40:94
  clagd-priority 100


# Define the bridge for STP
auto bridge
iface bridge
  bridge-vlan-aware yes
  # bridge-ports includes all ports related to VxLAN and CLAG.
  # does not include the Peerlink.4094 subinterface
  bridge-ports peerlink vni13 vni24 
  bridge-vids 13 24
  bridge-pvid 1

# VxLAN Tunnel 
auto vni13
iface vni13
  mtu 9000
  vxlan-id 13
  vxlan-local-tunnelip 10.0.0.41
  bridge-access 13
  bridge-learning off
  mstpctl-bpduguard yes
  mstpctl-portbpdufilter yes

#VxLAN Tunnel 
auto vni24
iface vni24
  mtu 9000
  vxlan-id 24
  vxlan-local-tunnelip 10.0.0.41
  bridge-access 24
  bridge-learning off
  mstpctl-bpduguard yes
  mstpctl-portbpdufilter yes
  bridge-arp-nd-suppress on

#Tenant SVIs - 

auto vlan13
iface vlan13
    address-virtual 44:39:39:ff:00:13 10.1.3.1/24
    address 10.1.3.13/24
    vlan-id 13
    vlan-raw-device bridge

auto vlan24
iface vlan24
    address-virtual 44:39:39:ff:00:24 10.2.4.1/24
    address 10.2.4.13/24
    vlan-id 24
    vlan-raw-device bridge



